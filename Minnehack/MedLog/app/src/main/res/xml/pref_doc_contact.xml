<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:id="@+id/doc_email"
        android:key="doc_email"
        android:defaultValue="abc@gmail.com"
        android:inputType="text|textEmailAddress"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_email"/>
    <EditTextPreference
        android:id="@+id/doc_phone"
        android:key="doc_phone"
        android:defaultValue="0000000000"
        android:inputType="phone"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_phone"/>
</PreferenceScreen>